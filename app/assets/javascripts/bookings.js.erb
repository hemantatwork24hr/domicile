$(".chk_room_type").on('click', function() {

    room_type_ids = [];

  $("input:checkbox[name='booking[room_type_ids][]']:checked").each(function(){
    room_type_ids.push($(this).val());
  });

  $.ajax({
        url: '/rooms/search',
        data: {room_type_ids: room_type_ids},
        //dataType: 'json',
        success: function( response ) {

          $("#display_rooms").html( response );
        }
    });
  });

$('.datepicker').datepicker()
$(document).on("focus", "[data-behaviour~='datepicker']", function(e){
    $(this).datepicker({"format": "yyyy-mm-dd", "weekStart": 1, "autoclose": true});
});