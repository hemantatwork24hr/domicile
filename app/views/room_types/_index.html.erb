<div class="well">
	<div class="well"><h1>Listing room types</h1></div>

	<div class="well">
	<%= link_to "Create room type", new_room_type_path, remote: true, id:'list_room_types', class:'btn btn-info btn-lg' %>
	</div>
	
	<div class="well">
		<table class="table table-bordered">
			<tr>
				<th>Room type name</th>
				<th>Price</th>
				<th>Number of beds</th>
				<th>A/C</th>
				<th colspan="3"></th>
			</tr>

			<% @roomTypes.each do |roomType| %>
				<tr>
					<td><%= roomType.name %></td>
					<td><%= roomType.price %></td>
					<td><%= roomType.number_of_beds %></td>
					<td><%= roomType.ac %></td>
					<td>
					<%= link_to 'Show', room_type_path( roomType ), :class => "glyphicon glyphicon-info-sign",
					:data => {:toggle => 'modal', :target => "#myModal"}, :remote => true %>
					</td>
					<td>
					<%= link_to 'Edit', edit_room_type_path( roomType ), :class => "glyphicon glyphicon-pencil", remote:true %>
					</td>	
					<td>
					<%= link_to 'Destroy', room_type_path( roomType ), :class => "glyphicon glyphicon-remove",method: :delete,
					data: { confirm: 'Are you sure?'}, remote:true %>
					</td>	
				</tr>
			<% end %>
		</table>
	</div>
</div>