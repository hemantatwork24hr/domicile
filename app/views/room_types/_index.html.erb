<div class="row">
	<div class="col-sm-9">
		<div class="well">
			<div class="row">
				<div class="col-sm-10 bottom20"><h3>Listing room types</h3></div>
				<div class="col-sm-2">
				<%= link_to "Create room type", new_room_type_path, remote: true, id:'list_room_types', class:'btn btn-success btn-md float-right' %>
				</div>
			</div>
			<table class="table table-bordered">
				<tr>
					<th>Room type name</th>
					<th>Price</th>
					<th>Number of beds</th>
					<th>A/C</th>
					<th colspan="3"></th>
				</tr>

				<% @roomTypes.each do |roomType| %>
					<tr>
						<td><%= roomType.name %></td>
						<td><%= roomType.price %></td>
						<td><%= roomType.number_of_beds %></td>
						<td><%= roomType.ac %></td>
						<td>
						<%= link_to 'Show', room_type_path( roomType ), :class => "glyphicon glyphicon-info-sign",
						:data => {:toggle => 'modal', :target => "#myModal"}, :remote => true %>
						</td>
						<td>
						<%= link_to 'Edit', edit_room_type_path( roomType ), :class => "glyphicon glyphicon-pencil", remote:true %>
						</td>	
						<td>
						<%= link_to 'Destroy', room_type_path( roomType ), :class => "glyphicon glyphicon-remove",method: :delete,
						data: { confirm: 'Are you sure?'}, remote:true %>
						</td>	
					</tr>
				<% end %>
			</table>
		</div>
	</div>

	<div class="col-sm-3 well">
		<h4>Search by</h4>
		<input class="form-control" id="myInput" type="text" placeholder="Room type name">
		<br>
		<div class="row">
			<div class="col-sm-6">
				<p>Price between</p>
			</div>
		</div>
		<br>
		<div class="row">
			<div class="col-sm-6">
				<div class="dropdown">
		 	<button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Min<span class="caret"></span></button>
			  <ul class="dropdown-menu">
			    <li><a href="#">100</a></li>
			    <li><a href="#">200</a></li>
			  </ul>
			</div>
			</div>
			<div class="col-sm-6">
				<div class="dropdown">
		 	<button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Max<span class="caret"></span></button>
			  <ul class="dropdown-menu">
			    <li><a href="#">300</a></li>
			    <li><a href="#">400</a></li>
			  </ul>
			</div>
			</div>
		</div>
		<br>
		<div class="row">
			<div class="col-sm-12">
				<div class="dropdown">
			 	<button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Number of beds<span class="caret"></span></button>
				  <ul class="dropdown-menu">
				    <li><a href="#">1</a></li>
				    <li><a href="#">2</a></li>
				  </ul>
				</div>
			</div>
		</div>
		<br>
		<div class="row">
			<div class="col-sm-12">
			 	<div class="dropdown">
				 	<button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">A/C<span class="caret"></span></button>
					  <ul class="dropdown-menu">
					    <li><a href="#">Yes</a></li>
					    <li><a href="#">No</a></li>
					  </ul>
				</div>
			</div>
		</div> 
		<div class="text-center">
			<button type="button" class="btn btn-info btn-md">Search</button>
		</div>
	</div>
</div>