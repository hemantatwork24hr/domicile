<div class="well">
<%= form_for @booking, :html => {:id => "book_a_room", :multipart => true, :remote => true } do |f|%>

    <div class="container-fluid">
        <div class="form-group row">
          <div class="col-sm-4">
            <%= f.label :check_in %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :check_in, 'data-behaviour' => 'datepicker' %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-4">
            <%= f.label :check_out %>
          </div>
           <div class="col-sm-8">
            <%= f.text_field :check_out, 'data-behaviour' => 'datepicker' %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-4">
            <%= f.label :adults %>
          </div>
          <div class="col-sm-8">
            <%=f.select :adults, options_for_select(1..5)%>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-4">
            <%= f.label :children %>
          </div>
          <div class="col-sm-8">
            <%=f.select :children, options_for_select(1..5)%>
          </div>

        </div>
        <div class="form-group row">
          <div class="col-sm-4">
            <%= f.label :room_type%>
          </div>
          <div class="col-sm-8">
            <%= f.collection_check_boxes( :room_type_ids, RoomType.all, :id, :name, {}, {:class => 'chk_room_type'} ) %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-4">
            <%= f.label :room %>
          </div>
          <div class="col-sm-8" id="display_rooms">
           
          </div>
        </div>

         <div class="form-group row">
            <div class="col-sm-4">
              <%= f.label :select_customer %>
            </div>
            <div class="col-sm-4">
               <%= collection_select(:customer, :customer_id, Customer.all, :id, :name ) %>
            </div>
            <div class="col-sm-4">
              <%= link_to "Create customer", new_customer_path, remote: true, id:'list_rooms', class:'btn btn-info btn-md' %>
            </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-6">
            <%= link_to 'Back', bookings_path , :class => "btn btn-danger left", remote: true %>
          </div>
          <div class="col-sm-6">
          </div>
           <div class="col-sm-6">
            <%= f.submit :class => 'btn btn-info right', :id => "create_customer" %>
          </div>
        </div>
      </div>
<% end %>
</div>
<%= javascript_include_tag('bookings.js') %>

