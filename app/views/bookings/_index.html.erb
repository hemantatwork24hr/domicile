<div class="well">
  <div class="well"><h1>Listing bookings</h1></div>
  <div class="well">
  <%= link_to "Book a room", new_booking_path, remote: true, id:'list_bookings', 
  class:'btn btn-info btn-lg' %>
  </div>
  <div class="well">
    <table class="table table-bordered">
        <tr>
          <th>Check in</th>
          <th>Check out</th>
          <th>Adults</th>
          <th>Childrens</th>
          <th>Room number</th>
          <th>Customer name</th>
          <th colspan="3">Actions</th>
        </tr>

    <% @bookings.each do |booking|%>
      <tr>
          <td><%=booking.check_in %></td>
          <td><%=booking.check_out %></td>
          <td><%=booking.adults %></td>
          <td><%=booking.children %></td>
          <td>
            <ul>
              <% booking.room_ids.each do |room_id| %>
                <% room = @rooms.find( room_id )%>
                <li><%=room.room_number %></li>
              <% end%>
            </ul>
          </td>
          <% customer = @customers.find( booking.customer_id ) %>
          <td>
            <%=customer.name%>
          </td>
          <td>
            <%= link_to 'Edit', edit_booking_path( booking ), :class => "glyphicon glyphicon-pencil", remote:true %>
          </td>
          <td>
            <%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' }, remote:true %>
          </td>
          <td>
            <%= link_to 'Generate bill' %>
          </td>
      </tr>
    <% end %>
     </table>
  </div>
</div>