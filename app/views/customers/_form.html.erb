<div class="well">
<%= form_for @customer, :html => {:id => "create_customer", :multipart => true, :remote => true } do |f|%>

    <div class="container-fluid">
        <div class="form-group row">
          <div class="col-sm-4">
            <%= f.label :name %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :name, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-4">
            <%= f.label :phone %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :phone, :class => "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-4">
            <%= f.label :email %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :email, :class => "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-4">
            <%= f.label :adhaar_id %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :adhaar_id, :class => "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-6">
            <%= f.submit :class => "btn btn-info", :id => "create_customer" %>
          </div>
          <div class="col-sm-6">
            <%= link_to 'Back', customers_path , :class => "btn btn-danger", remote: true %>
          </div>
          <div class="col-sm-6">
          </div>
        </div>
      </div>
<% end %>
</div>