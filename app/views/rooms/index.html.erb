<button type="button" class="btn btn-info btn-lg" data-toggle="modal" 
data-target="#myModal" href="<%= new_room_path %>">Create room</button>
<br>
<h1>Listing rooms</h1>
<table class="table table-bordered">
	<tr>
		<th>Name</th>
		<th>Cost</th>
		<th colspan="3"></th>
	</tr>

	<% @rooms.each do |room| %>
		<tr>
			<td><%= room.name %></td>
			<td><%= room.price %></td>
			<td><%= link_to 'Show', room_path( room ), :class => "glyphicon glyphicon-info-sign"%>
			</td>
			<td>
				<%= link_to 'Edit', edit_room_path( room ), :class => "glyphicon glyphicon-pencil"%>	
			</td>	
			<td><%= link_to 'Destroy', room_path(room), :class => "glyphicon glyphicon-remove",
					method: :delete,
					data: { confirm: 'Are you sure?'} %>
			</td>	
		</tr>
	<% end %>
</table>
