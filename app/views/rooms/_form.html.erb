<div class="well">
	<%= form_for @room, :html =>{:id=>"create_room",:multipart => true,:remote=>true} do |f| %>
		<% if @room.errors.any? %>
			<div id="error_explanation">
				<h2>
				<%= pluralize(@room.errors.count, "error")%>prohibited this room from being saved:
				</h2>
				<ul>
					<% @room.errors.full_messages.each do |msg| %>
						<li><%=msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<div class="container-fluid">
			<div class="form-group row">
				<div class="col-sm-4">
					<%= f.label :room_number %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :room_number, :class => "form-control" %>
				</div>
			</div>

			<div class="form-group row">
				<div class="col-sm-4">
					<%= f.label :type %>
				</div>
				<div class="col-sm-8">
					<%= collection_select(:room, :room_type_id, RoomType.all, :id, :name) %>
				</div>
			</div>

			<div class="form-group row">
				<div class="col-sm-4">
					<%= f.label :availability %>
				</div>
				<div class="col-sm-8">
	    			<%= f.radio_button :availability, 'true' %>Yes
	    			<%= f.radio_button :availability, 'false' %>No<br />
				</div>
			</div>

			<div class="form-group row">
				<div class="col-sm-4">
					<%= f.label :room_floor %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :room_floor, :class => "form-control" %>
				</div>
			</div>

			<div class="form-group row">
				<div class="col-sm-6">
					<%= f.submit :class => "btn btn-info", :id => "create_room" %>
				</div>
				<div class="col-sm-6">
					<%= link_to 'Back', rooms_path , :class => "btn btn-danger", remote: true %>
				</div>
				<div class="col-sm-6">
				</div>
			</div>
		</div>
	<% end %>
</div>