<div class="well">
	<div class="well"><h1>Listing rooms</h1></div>

	<div class="well">
	<%= link_to "Create room", new_room_path, remote: true, id:'list_rooms', class:'btn btn-info btn-lg' %>
	</div>
	
	<div class="well">
		<table class="table table-bordered">
			<tr>
				<th>Room number</th>
				<th>Type</th>
				<th>Availability</th>
				<th>Floor</th>
				<th colspan="3">Actions</th>
			</tr>

			<% @rooms.each do |room| %>
				<tr>
					<td><%= room.room_number %></td>
					<% roomType = @roomTypes.find( room.room_type_id ) %></td>
					<td><%= roomType.name %></td>
					<td><%= room.availability %></td>
					<td><%= room.room_floor%></td>
					<td>
					<%= link_to 'Show', room_path( room ), :class => "glyphicon glyphicon-info-sign",
					:data => {:toggle => 'modal', :target => "#myModal"}, :remote => true %>
					</td>
					<td>
					<%= link_to 'Edit', edit_room_path( room ), :class => "glyphicon glyphicon-pencil", remote:true %>
					</td>	
					<td>
					<%= link_to 'Destroy', room_path( room ), :class => "glyphicon glyphicon-remove",method: :delete,
					data: { confirm: 'Are you sure?'}, remote:true %>
					</td>	
				</tr>
			<% end %>
		</table>
	</div>
</div>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title" id="modal-title-id"></h4>
      </div>
      <div class="modal-body" id="modal-body-id">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>

<script type="text/javascript">
	
	
$(document).on('ready page:change', function() {
  $('input[type="checkbox"].toggle').bootstrapToggle(); // assumes the checkboxes have the class "toggle"
});
</script>